{
    "Autoloader":
    {
        "fork_run": true,
        "disabled_classes":
        [
            "Prometheus",
            "SlackAlert",
            "TCPconn"
        ]
    },

    "Plugins":
    {
        "ProxMox":
        {
            "crontab": "0 */1 * * *",
            "hostname": "",
            "username": "",
            "password": "",
            "realm":    "pam",
            "port":     8006
        },
        
        "SlackAlert":
        {
            "hook_url": "",
            "author": "Serelepe Monitoring",
            "header": "Automated message",
            "color":  "#ff0000"
        },

        "ProxMox_Diskspace":
        {
            "crontab":  "0 */12 * * *",
            "threshold_alert": 75,
            "threshold_critical": 90
        },

        "ProxMox_Storage":
        {
            "crontab":  "0 */12 * * *",
            "threshold_alert": 75,
            "threshold_critical": 90
        },

        "ProxMox_Memory":
        {
            "crontab": "* * * * *",
            "threshold_alert": 75,
            "threshold_critical": 90
        },

        "ProxMox_ICMP":
        {
            "crontab": "* * * * *",
            "timeout": 1000
        },

        "MySQL":
        {
            "crontab": "* * * * *",
            "host": "",
            "user": "",
            "password": "",
            "database": "",
            "query": ""
        },

        "Prometheus":
        {
            "crontab": "* * * * *"
        },

        "TCPconn":
        {
            "crontab": "* * * * *",
            "timeout": 1,

            "host": "google.com",

            "port": [
                80,
                443
            ]
        }
    }
}